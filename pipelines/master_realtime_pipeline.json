      "policy": {
        "timeout": "0.00:10:00",
        "retry": 2,
        "retryIntervalInSeconds": 30
      },
      "typeProperties": {
        "notebookPath": "/lakehouse/gold/notebooks/aggregate_streaming_features",
        "baseParameters": {}
      }
    }
  ],
  "triggers": [
    {
      "name": "Hourly_Realtime_Processing",
      "type": "ScheduleTrigger",
      "recurrence": {
        "frequency": "Hour",
        "interval": 1,
        "startTime": "2025-01-01T00:00:00Z",
        "timeZone": "UTC"
      }
    }
  ]
