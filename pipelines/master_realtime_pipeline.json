{
  "name": "master_realtime_pipeline",
  "description": "Real-time Event Medallion: Process streaming policy updates (Bronze → Silver → Gold)",
  "activities": [
    {
      "name": "Process_Streaming_Silver",
      "type": "Notebook",
      "dependsOn": [],
      "policy": {
        "timeout": "0.00:15:00",
        "retry": 2,
        "retryIntervalInSeconds": 30
      },
      "typeProperties": {
        "notebookPath": "/lakehouse/silver/notebooks/process_streaming_silver",
        "baseParameters": {}
      }
    },
    {
      "name": "Sync_KQL_Aggregations",
      "type": "Notebook",
