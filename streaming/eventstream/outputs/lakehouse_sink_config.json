{
  "name": "Lakehouse Bronze Sink",
  "description": "Real-time policy status changes to Bronze Lakehouse for batch replay",
  "destination": {
    "type": "Lakehouse",
    "workspace": "Insurance-ML-Platform",
    "lakehouse": "lh_bronze",
    "table": "bronze_realtime_policy_events",
    "format": "Delta"
  },
  "input_format": "JSON",
  "write_mode": "append",
  "partition_columns": ["ingestion_date"],
  "error_policy": {
    "on_error": "skip_invalid_records",
    "max_retries": 3
  },
  "comment": "Real-time data: Policy status changes (ACTIVE, SUSPENDED, CANCELLED, RENEWED)",
  "sample_event": {
    "event_id": "evt_20250115_001",
    "policy_id": "POL-2024-001",
    "event_type": "STATUS_CHANGE",
    "old_status": "ACTIVE",
    "new_status": "SUSPENDED",
    "reason": "PAYMENT_OVERDUE",
    "event_time": "2025-01-15T10:30:00Z",
    "user_id": "agent_123"
  }
}
