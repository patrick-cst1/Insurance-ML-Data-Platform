{
  "name": "KQL Database Sink",
  "description": "Real-time claims events to KQL Database",
  "destination": {
    "type": "KQL Database",
    "workspace": "Insurance-ML-Platform",
    "database": "kql_insurance_realtime",
    "table": "realtime_claims_events",
    "ingestion_mapping": "realtime_claims_mapping"
  },
  "input_format": "JSON",
  "error_policy": {
    "on_error": "skip_invalid_records",
    "max_retries": 3
  }
}
